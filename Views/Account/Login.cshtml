@model DameChanceSV2.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="login-wrapper d-flex justify-content-center align-items-center">
    <div class="login-card">
        <h2 class="text-center mb-4"><i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión</h2>

        <form asp-action="Login" method="post">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group mb-3">
                <label asp-for="Correo" class="form-label"><i class="bi bi-envelope me-1"></i>Correo electrónico</label>
                <input asp-for="Correo" class="form-control input-custom" />
                <span asp-validation-for="Correo" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Contrasena" class="form-label"><i class="bi bi-lock-fill me-1"></i>Contraseña</label>
                <input asp-for="Contrasena" type="password" class="form-control input-custom" />
                <span asp-validation-for="Contrasena" class="text-danger small"></span>
            </div>

            
            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-login"><i class="bi bi-box-arrow-in-right me-1"></i> Iniciar sesión</button>
            </div>
        </form>

        <div class="text-center mt-2">
            <a asp-action="RecuperarContrasena" class="forgot-link"><i class="bi bi-question-circle me-1"></i>¿Olvidaste tu contraseña?</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
