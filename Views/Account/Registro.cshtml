@model DameChanceSV2.Models.RegistroViewModel

@{
    ViewData["Title"] = "Registro";
}

<div class="register-wrapper d-flex justify-content-center align-items-center">
    <div class="register-card">
        <h2 class="text-center mb-4"><i class="bi bi-person-plus-fill me-2"></i> Crear cuenta</h2>

        <form asp-action="Registro" method="post">
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label"><i class="bi bi-person-fill me-1"></i>Nombre completo</label>
                <input asp-for="Nombre" class="form-control input-custom" />
                <span asp-validation-for="Nombre" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Correo" class="form-label"><i class="bi bi-envelope me-1"></i>Correo electrónico</label>
                <input asp-for="Correo" class="form-control input-custom" />
                <span asp-validation-for="Correo" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Contrasena" class="form-label"><i class="bi bi-lock-fill me-1"></i>Contraseña</label>
                <input asp-for="Contrasena" type="password" class="form-control input-custom" />
                <span asp-validation-for="Contrasena" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmarContrasena" class="form-label"><i class="bi bi-lock me-1"></i>Confirmar contraseña</label>
                <input asp-for="ConfirmarContrasena" type="password" class="form-control input-custom" />
                <span asp-validation-for="ConfirmarContrasena" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-register">
                    <i class="bi bi-person-check-fill me-1"></i> Registrarse
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
