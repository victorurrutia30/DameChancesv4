@{
    ViewData["Title"] = "Verificar Cuenta";
}

<div class="verify-wrapper d-flex justify-content-center align-items-center">
    <div class="verify-card text-center">
        <i class="bi bi-check-circle-fill verify-icon mb-3"></i>
        <h2 class="mb-3">¡Cuenta verificada!</h2>
        <p class="verify-message">@ViewBag.Message</p>

        <div class="d-grid mt-4">
            <a asp-action="Login" class="btn btn-verify-login">
                <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar Sesión
            </a>
        </div>
    </div>
</div>
