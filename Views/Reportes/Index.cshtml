@model List<DameChanceSV2.Models.Reporte>

@{
    ViewData["Title"] = "Reportes de Usuarios";
}

<h2>Reportes de Usuarios</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Reportante</th>
            <th>Reportado</th>
            <th>Motivo</th>
            <th>Fecha</th>
            <th>Resuelto</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.IdReportante</td>
                <td>@r.IdReportado</td>
                <td>@r.Motivo</td>
                <td>@r.FechaReporte.ToString("g")</td>
                <td>@(r.Resuelto ? "Sí" : "No")</td>
                <td>
                    @if (!r.Resuelto)
                    {
                        <form asp-action="MarcarResuelto" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@r.Id" />
                            <button type="submit" class="btn btn-sm btn-success">
                                Marcar resuelto
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

