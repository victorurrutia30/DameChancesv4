@model DameChanceSV2.Models.Reporte

@{
    ViewData["Title"] = "Reportar Usuario";
}

<h2>Reportar Usuario</h2>

<form asp-action="Reportar" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdReportado" />
    <div class="mb-3">
        <label asp-for="Motivo" class="form-label">Motivo</label>
        <textarea asp-for="Motivo" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Motivo" class="text-danger small"></span>
    </div>
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-flag-fill me-1"></i>Enviar Reporte
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

